<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <!-- Toolbar at the top -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/about_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="#FF9E37"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/dsc_0287" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Name: Mayamin Uzma Binti Aizam"
        android:textSize="16sp"
        android:background="@drawable/info_background" />

    <!-- ID Number TextView -->
    <TextView
        android:id="@+id/idNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="ID Number: XXXXX"
        android:textSize="16sp"
        android:background="@drawable/info_background" />

    <!-- Class TextView -->
    <TextView
        android:id="@+id/classTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idNumberTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="5B"
        android:textSize="16sp"
        android:background="@drawable/info_background" />

    <!-- Group TextView -->
    <TextView
        android:id="@+id/groupTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/classTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="CS240"
        android:textSize="16sp"
        android:background="@drawable/info_background" />

    <!-- Summary TextView -->
    <TextView
        android:id="@+id/summaryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Summary: Your application summary goes here."
        android:textSize="16sp"
        android:justificationMode="inter_word"
        android:padding="16dp"
        android:background="@drawable/info_background" />


    <!-- Container for buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/summaryTextView"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- GitHub Button -->
        <Button
            android:id="@+id/githubButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetLeft="10dp"
            android:insetRight="10dp"
            android:text="GitHub"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3F51B5"
            android:textSize="16sp" />

        <!-- YouTube Button -->
        <Button
            android:id="@+id/youtubeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetLeft="10dp"
            android:insetRight="10dp"
            android:text="YouTube"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3F51B5"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Bottom Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF9E37"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"

        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2024 by Mayamin Uzma. \nAll rights reserved."
            android:textAlignment="center"
            android:textColor="#393636"
            android:textSize="16sp"
            android:background="#FF9E37"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

</RelativeLayout>
